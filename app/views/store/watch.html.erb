<% provide :title, "TEVISE官方旗舰店" %>

<div class="container-fixed-bottom">
  <div class="row">
    <div class="col-xs-9 col-details">
      <div class="table-row">
        <div class="table-col vertical-middle">
          <div>
            <span class="icons-plus"></span>
            <span>特维斯1号仓库发货</span>
          </div>
          <div>
            <span class="icons-timer"></span>
            <div class="container-time-price">
              <div class="container-time"><span class="time time-day">00</span><span>:</span><span class="time time-hour">00</span><span>:</span><span class="time time-minute">00</span><span>:</span><span class="time time-second">00</span>
              </div>
              <div class="container-price">
                ¥<%= @watch.price.to_i %>限时抢购
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-xs-3 col-buy">
      <div class="table-row">
        <div class="table-col vertical-middle">
          <a class="btn-link-buy" href="#orderSection">立即购买</a>
        </div>
      </div>
    </div>
  </div>
</div>

<div id="watch-images-container">
  <div>
    <%= image_tag("watch-1.jpg", class: "product-page-image") %>
  </div>

  <div id="container-watch-price">
    <div class="row">
      <div class="col-xs-3 col-price-info">
        <div class="table-row">
          <div class="table-col vertical-middle">
            <span class="currency-symbol">¥</span>
            <span class="price"><%= @watch.price.to_i %></span>
          </div>
        </div>
      </div>
      <div class="col-xs-4 col-other-info">
        <div class="table-row">
          <div class="table-col vertical-middle">
            <div>
              <span class="watch-old-price">¥3980元</span>
              <span class="icons-watch-10-percent"></span>
            </div>
            <div>
              19750件已售
            </div>
          </div>
        </div>
      </div>
      <div class="col-xs-5 col-timer">
        <div class="icons-timer-bg">
          <div class="description">距结束仅剩</div>
          <div class="container-time"><span class="time time-day">00</span><span>:</span><span class="time time-hour">00</span><span>:</span><span class="time time-minute">00</span><span>:</span><span class="time time-second">00</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div>
    <%= image_tag("watch-2.jpg", class: "product-page-image") %>
  </div>

  <div>
    <div class="container-btn-buy">
      <a href="#orderSection" class="icons-watch-buy-now">
      </a>
    </div>
  </div> 

  <% for i in 3..28 %>
  <div>
    <%= image_tag("watch-#{i}.jpg", class: "product-page-image") %>
  </div>
  <% end %>

  <div id="orderSection">
    <div class="order-header">
      <%= image_tag("online-order.png", class: "image-online-order") %>
    </div>
    <div class="order-info">
      <div class="order-info-banner">
        <span class="icons-arrow-down"></span>订单信息
      </div>
      <div class="order-info-body">
        <div class="section-product-variant section-product-variant-color">
          <div class="section-product-variant-title">颜色分类</div>
          <div>
            <span class="variant-option" data-value="gwhite">钢带白色款</span>
            <span class="variant-option" data-value="pwhite">皮带白色款</span>
          </div>
        </div>

        <div class="section-product-variant section-product-variant-count">
          <div class="row">
            <div class="col-xs-4 col-banner">
              <div class="table-row">
                <div class="table-col vertical-middle">
                  <div class="buy-count-banner">购买数量</div>
                </div>
              </div>
            </div>
            <div class="col-xs-8 col-count">
              <span class="btn-minus">-</span>
              <input type="number" value="1" name="productCount" id="productCount" />
              <span class="btn-plus">+</span>
            </div>
          </div>
        </div>

        <div class="section-product-variant section-product-variant-receiver">
          <div class="section-product-variant-title">收件信息</div>
          <div>
            <div class="row">
              <div class="col-xs-5">
                <div class="container-input-box container-input-box-name">
                  <span class="icons-receiver"></span><input type="text" placeholder="收件人" name="receiverName" id="receiverName" /><span>*</span>
                </div>
              </div>
              <div class="col-xs-7">
                <div class="container-input-box container-input-box-phone">
                  <span class="icons-phone"></span><input type="number" placeholder="联系电话" name="receiverPhone" id="receiverPhone" /><span>*</span>
                </div>
              </div>
            </div>
            <div class="row row-address">
              <div class="col-xs-12">
                <div class="container-input-box container-input-box-address">
                  <span class="icons-address"></span><input type="text" placeholder="详细地址" name="receiverAddress" id="receiverAddress" /><span>*</span>
                </div>
              </div>
            </div>            
          </div>
        </div>

        <div class="container-order-price">
          <div>
            总计：<span class="total-price">¥<%= @watch.price.to_i %></span><span style="margin: 0 10px;">/</span>运费：<span class="transport-price">¥0</span>
          </div>
          <div class="container-actual-total-price">
            实付：¥<span class="actual-total-price"><%= @watch.price.to_i %></span>
          </div>
        </div>

        <div class="container-buy-btn">
          <button id="buyBtn">确定提交</button>
        </div>

        <div class="row container-purchase-services">
          <div class="col-xs-4 col-refund">
            <div><%= image_tag("watch-refund.png") %></div>
            <div class="purchase-service-title">七天包退换</div>
          </div>
          <div class="col-xs-4 col-transport-free">
            <div><%= image_tag("watch-transport-free.png") %></div>
            <div class="purchase-service-title">顺丰免运费</div>
          </div>
          <div class="col-xs-4 col-pay-after-receive">
            <div><%= image_tag("watch-pay-after-receive.png") %></div>
            <div class="purchase-service-title">全国货到付款</div>
          </div>                    
        </div>

        <div class="container-icp">
          ICP备案号：浙ICP备16016328号
        </div>

        <div style="text-align:center;font-size:13px;color:#9e9e9e;padding:10px 0;">金华东旭传动设备有限公司</div>
      </div>
    </div>
  </div>  
</div>

<div id="inputErrorPopup" class="modal">
  <div class="modal-dialog">
    <div class="modal-content" style="box-shadow: none;border: none;">
     <div class="modal-body">
        <div class="container-icons"><span class="icons-important"></span></div>
        <div class="container-error-message">
        </div>
     </div>
   </div>
 </div>
</div>

<div id="messagePopup" class="modal">
  <div class="modal-dialog">
    <div class="modal-content" style="box-shadow: none;border: none;">
     <div class="modal-body">
     </div>
   </div>
 </div>
</div>